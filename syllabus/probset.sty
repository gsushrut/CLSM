%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% generic problem set macros
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newcommand{\separator}{
  \vspace{-21pt}\par
  \begin{center}
  \rule{5in}{1pt}
  \end{center}
  \par
  \vspace{-12pt}
}

\newcommand{\continued}{\vfill\hfill\textit{Continued...}}

\newcommand{\points}[1]{\textit{[#1 points]}}

\newenvironment{probcite}[1][3in]
  {
    \frenchspacing
    \begin{list}{}{\setlength{\topsep}{0pt}\setlength{\partopsep}{0pt}
                   \setlength{\leftmargin}{#1}\setlength{\rightmargin}{0pt}}
    \item[]
  }
  {
    \end{list}
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% worksheet construction
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% sectioning
\renewcommand{\section}{\@startsection{section}{2}{\z@}%
                                     {-3.25ex\@plus -1ex \@minus -.2ex}%
                                     {1.5ex \@plus .2ex}%
                                     {\normalfont\bfseries}}
\newcommand{\tsection}[1]{\textbf{#1}~~}

% annotations
\DeclareRobustCommand{\bookproblem}[1]{\textit{[{#1}]}}
\DeclareRobustCommand{\query}[1]{\textbf{\textsf{#1}}}
\DeclareRobustCommand{\filename}[1]{[Suggested filename: \mcmd{#1}]}

% answer block
\newcommand{\answerblockrulewidth}{1pt}  
\DeclareRobustCommand{\answerblock}[2][\answerblockrulewidth]{\rule{#1}{#2}}

% DEPRECATED: \blankblock
% used in MMP Fall 2015
% can be reimplemented in terms of \answerblock
\DeclareRobustCommand{\blankblock}[1]{\rule{0pt}{#1}}


